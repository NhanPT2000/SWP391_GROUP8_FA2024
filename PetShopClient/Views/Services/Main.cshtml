<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Complete Responsive Pet Food Website Design Tutorial</title>

    <!-- font awesome cdn link  -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

    <!-- custom css file link  -->
    <link rel="stylesheet" href="css/style.css">

</head>
<body>
    
<!-- header section starts  -->

<header class="header">

    <section class="flex">

        <a href="#" class="logo"> <i class="fas fa-paw"></i> shop </a>

        <nav class="navbar">
                <a asp-action="Index" asp-controller="Home">home</a>
                <a asp-action="Index" asp-controller="Home">about</a>
                <a asp-action="Main" asp-controller="Products">shop</a>
                <a asp-action="Main" asp-controller="Services">services</a>
            <a href="#contact">contact</a>
        </nav>
    
        <div class="icons">
            <div class="fas fa-bars" id="menu-btn"></div>
            <a href="#" class="fas fa-shopping-cart"></a>
            <div class="fas fa-user" id="login-btn"></div>
        </div>

         @await Html.PartialAsync("User.cshtml");

    </section>

</header>

<!-- header section ends -->

<!-- Sidebar for Categories -->
<div class="sidebar">
    <h3>Categories</h3>
    <div class="category">
        <h4 onclick="filterProducts('All')">All</h4>
    </div>
    <div class="category">
        <h4 onclick="toggleSubcategories('pet-food')">Pet Food</h4>
        <div id="pet-food" class="subcategories">
            <a href="#" onclick="filterProducts('Pet Food 1')">Pet Food 1</a>
            <a href="#" onclick="filterProducts('Pet Food 2')">Pet Food 2</a>
        </div>
    </div>
    <div class="category">
        <h4 onclick="toggleSubcategories('pet-service')">Pet Service</h4>
        <div id="pet-service" class="subcategories">
            <a href="#" onclick="filterProducts('Pet Service 1')">Pet Service 1</a>
            <a href="#" onclick="filterProducts('Pet Service 2')">Pet Service 2</a>
        </div>
    </div>
</div>

<!-- Product List Section -->
<section class="shop">
    <h2 class="heading">Our <span>Products</span></h2>

    <!-- Search Bar -->
    <div class="search-bar">
        <input type="text" id="search-input" placeholder="Search for products...">
        <button onclick="searchProducts()">Search</button>
    </div>

    <div id="products-container" class="products-container">
        <!-- Products will be displayed here -->
        <div class="product-box" data-category="Pet Food 1">
            <img src="https://via.placeholder.com/250" alt="Premium Dog Food">
            <h3>Premium Dog Food</h3>
            <div class="category">Category: Pet Food</div>
            <div class="price">$29.99</div>
            <a href="#" class="btn">Add to Cart</a>
            <a href="#" class="btn secondary">View Detail</a>
        </div>
        <div class="product-box" data-category="Pet Food 2">
            <img src="https://via.placeholder.com/250" alt="Premium Cat Food">
            <h3>Premium Cat Food</h3>
            <div class="category">Category: Pet Food</div>
            <div class="price">$39.99</div>
            <a href="#" class="btn">Add to Cart</a>
            <a href="#" class="btn secondary">View Detail</a>
        </div>
        <div class="product-box" data-category="Pet Food 1">
            <img src="https://via.placeholder.com/250" alt="Fish Pellets">
            <h3>Fish Pellets</h3>
            <div class="category">Category: Pet Food</div>
            <div class="price">$19.99</div>
            <a href="#" class="btn">Add to Cart</a>
            <a href="#" class="btn secondary">View Detail</a>
        </div>
        <div class="product-box" data-category="Pet Service 1">
            <img src="https://via.placeholder.com/250" alt="Pet Grooming Package">
            <h3>Pet Grooming Package</h3>
            <div class="category">Category: Pet Service</div>
            <div class="price">$69.99</div>
            <a href="#" class="btn">Add to Cart</a>
            <a href="#" class="btn secondary">View Detail</a>
        </div>
        <div class="product-box" data-category="Pet Service 2">
            <img src="https://via.placeholder.com/250" alt="Dog Walking Service">
            <h3>Dog Walking Service</h3>
            <div class="category">Category: Pet Service</div>
            <div class="price">$79.99</div>
            <a href="#" class="btn">Add to Cart</a>
            <a href="#" class="btn secondary">View Detail</a>
        </div>
    </div>

    <!-- Pagination -->
    <div class="pagination" id="pagination"></div>
</section>

<footer class="footer">

    <img src="image/top_wave.png" alt="">

    <div class="share">
        <a href="#" class="btn"> <i class="fab fa-facebook-f"></i> facebook </a>
        <a href="#" class="btn"> <i class="fab fa-twitter"></i> twitter </a>
        <a href="#" class="btn"> <i class="fab fa-instagram"></i> instagram </a>
        <a href="#" class="btn"> <i class="fab fa-linkedin"></i> linkedin </a>
        <a href="#" class="btn"> <i class="fab fa-pinterest"></i> pinterest </a>
    </div>

    <div class="credit"> 2024 created by <span> Group 8 </span> | all rights reserved! </div>

</footer>


<!-- custom js file link  -->
<script src="js/script.js"></script>

</body>
</html>