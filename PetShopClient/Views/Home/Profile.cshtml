@model DataObject.Member
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile Template</title>
    <link rel="stylesheet" href="~/css/ProfileStyle.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
    <div class="container light-style flex-grow-1 container-p-y">
        <h4 class="font-weight-bold py-3 mb-4">Account settings</h4>

        <div class="card overflow-hidden">
            <div class="row no-gutters row-bordered row-border-light">
                <div class="col-md-3 pt-0">
                    <div class="list-group list-group-flush account-settings-links">
                        <a class="list-group-item list-group-item-action active" data-toggle="list"
                           href="#account-general">General</a>
                        <a class="list-group-item list-group-item-action" data-toggle="list"
                           href="#account-change-password">Change password</a>
                        <a class="list-group-item list-group-item-action" data-toggle="list" href="#account-info">
                            My
                            Pet
                        </a>
                        <a class="list-group-item list-group-item-action" data-toggle="list"
                           href="#account-transaction-history">Transaction History</a>
                    </div>
                </div>

                <div class="col-md-9">
                    <div class="tab-content">
                        <div class="tab-pane fade active show" id="account-general">
                            <div class="card-body media align-items-center">
                                <img src="https://bootdey.com/img/Content/avatar/avatar1.png" alt="User profile picture"
                                     class="d-block ui-w-80">
                                <div class="media-body ml-4">
                                    <label class="btn btn-outline-primary">
                                        Upload new photo
                                        <input type="file" class="account-settings-fileinput" hidden>
                                    </label> &nbsp;
                                    <button type="button" class="btn btn-default md-btn-flat">Reset</button>
                                    <div class="text-light small mt-1">Allowed JPG, GIF or PNG. Max size of 800K</div>
                                </div>
                            </div>
                            <hr class="border-light m-0">
                            <div class="card-body">
                                <div class="form-group">
                                    <label class="form-label">Full Name</label>
                                    <input type="text" class="form-control mb-1" value="">
                                </div>

                                <div class="form-group">
                                    <label class="form-label">Gender</label>
                                    <div>
                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input" type="radio" name="genderOptions"
                                                   id="genderMale" value="male">
                                            <label class="form-check-label" for="genderMale">Male</label>
                                        </div>
                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input" type="radio" name="genderOptions"
                                                   id="genderFemale" value="female">
                                            <label class="form-check-label" for="genderFemale">Female</label>
                                        </div>
                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input" type="radio" name="genderOptions"
                                                   id="genderOther" value="other">
                                            <label class="form-check-label" for="genderOther">Other</label>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="form-label">E-mail</label>
                                    <input type="email" class="form-control mb-1" value="" readonly>
                                    <div class="alert alert-warning mt-3">
                                        Your email is not confirmed. Please check your inbox.<br>
                                        <a href="javascript:void(0)">Resend confirmation</a>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="form-label">Phone Number</label>
                                    <input type="text" class="form-control" value="">
                                </div>
                                <div class="form-group">
                                    <label class="form-label">Second Phone Number</label>
                                    <input type="text" class="form-control" value="">
                                </div>
                                <div class="form-group">
                                    <label class="form-label">Address</label>
                                    <input type="text" class="form-control" value="">
                                </div>
                            </div>
                        </div>

                        <!-- Change Password Tab -->
                        <div class="tab-pane fade" id="account-change-password">
                            <div class="card-body pb-2">
                                <div class="form-group">
                                    <label class="form-label">Current password</label>
                                    <input type="password" class="form-control">
                                </div>
                                <div class="form-group">
                                    <label class="form-label">New password</label>
                                    <input type="password" class="form-control">
                                </div>
                                <div class="form-group">
                                    <label class="form-label">Repeat new password</label>
                                    <input type="password" class="form-control">
                                </div>
                            </div>
                        </div>


                        <!-- My Pet Tab -->
                        <div class="tab-pane fade" id="account-info">
                            <div class="container">

                                <h4>Pet List</h4>
                                <button class="btn btn-primary" onclick="openPopup()">Add Pet</button>
                                <div id="petList" class="row">
                                    <!-- Example Pet Card -->
                                    <div class="card transaction-card">
                                        <div class="card-body">
                                            <img src="dog1.jpg" alt="dog1" class="pet-image">
                                            <h5>dog1</h5>
                                            <p>Type: Airedale Terrier</p>
                                            <p>Weight: 18 kg</p>
                                            <p>Origin: United Kingdom</p>
                                        </div>
                                    </div>
                                    <div class="card transaction-card">
                                        <div class="card-body">
                                            <img src="dog1.jpg" alt="dog1" class="pet-image">
                                            <h5>dog1</h5>
                                            <p>Type: Airedale Terrier</p>
                                            <p>Weight: 18 kg</p>
                                            <p>Origin: United Kingdom</p>
                                        </div>
                                    </div>
                                    <div class="card transaction-card">
                                        <div class="card-body">
                                            <img src="dog1.jpg" alt="dog1" class="pet-image">
                                            <h5>dog1</h5>
                                            <p>Type: Airedale Terrier</p>
                                            <p>Weight: 18 kg</p>
                                            <p>Origin: United Kingdom</p>
                                        </div>
                                    </div>
                                </div>

                            </div>

                            <!-- Popup Form -->
                            <div id="popupForm" class="popup">
                                <div class="popup-content">
                                    <span class="close" onclick="closePopup()">&times;</span>
                                    <h4>Add New Pet</h4>
                                    <div class="form-group">
                                        <label class="form-label">Pet Photo</label>
                                        <input type="file" id="petPhoto" class="form-control mb-1" accept="image/*" onchange="previewImage(event)">
                                        <img id="petImagePreview" src="" alt="Pet Image Preview" class="d-block ui-w-80" style="display:none;">
                                    </div>
                                    <div class="form-group">
                                        <label class="form-label">Pet Name</label>
                                        <input type="text" id="petName" class="form-control mb-1" placeholder="Enter pet name">
                                    </div>
                                    <div class="form-group">
                                        <label class="form-label">Pet Type</label>
                                        <input type="text" id="petType" class="form-control mb-1" placeholder="Enter type (e.g., Dog, Cat)">
                                    </div>
                                    <div class="form-group">
                                        <label class="form-label">Pet Weight</label>
                                        <input type="text" id="petWeight" class="form-control mb-1" placeholder="Enter weight">
                                    </div>
                                    <div class="form-group">
                                        <label class="form-label">Pet Origin</label>
                                        <input type="text" id="petOrigin" class="form-control mb-1" placeholder="Enter origin">
                                    </div>
                                    <button type="button" class="btn btn-primary" onclick="addPet()">Add Pet</button>
                                </div>
                            </div>
                        </div>




                        <!-- Transaction History Tab -->
                        <div class="tab-pane fade" id="account-transaction-history">
                            <div class="card-body">
                                <h5>Transaction History</h5>

                                <div class="search-filter-container">
                                    <input type="text" id="search-transactions" class="search-input"
                                           placeholder="Search transactions...">
                                    <select id="filter-status" class="filter-select">
                                        <option value="">Filter by status</option>
                                        <option value="completed">Completed</option>
                                        <option value="pending">Pending</option>
                                        <option value="failed">Failed</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="text-right mt-3">
            <button type="button" class="btn btn-primary">Save changes</button>&nbsp;
            <button type="button" class="btn btn-default">Cancel</button>
        </div>
    </div>
    <script>
        function openPopup() {
            document.getElementById('popupForm').style.display = 'block';
        }

        function closePopup() {
            document.getElementById('popupForm').style.display = 'none';
        }

        function previewImage(event) {
            const reader = new FileReader();
            reader.onload = function(){
                const output = document.getElementById('petImagePreview');
                output.src = reader.result;
                output.style.display = 'block';
            };
            reader.readAsDataURL(event.target.files[0]);
        }

        function addPet() {
            const petName = document.getElementById('petName').value;
            const petType = document.getElementById('petType').value;
            const petWeight = document.getElementById('petWeight').value;
            const petOrigin = document.getElementById('petOrigin').value;
            const petPhoto = document.getElementById('petImagePreview').src;

            if (petName && petType && petWeight && petOrigin && petPhoto) {
                const petList = document.getElementById('petList');
                const petCard = document.createElement('div');
                petCard.className = 'card transaction-card';
                petCard.innerHTML = `
                    <div class="card-body">
                        <img src="${petPhoto}" alt="${petName}" class="pet-image">
                        <h5>${petName}</h5>
                        <p>Type: ${petType}</p>
                        <p>Weight: ${petWeight}</p>
                        <p>Origin: ${petOrigin}</p>
                    </div>
                `;
                petList.appendChild(petCard);
                closePopup();
            } else {
                alert('Please fill in all fields and upload a photo');
            }
        }
    </script>
    <script src="https://code.jquery.com/jquery-1.10.2.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
