@model DataObject.User

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <link rel="stylesheet" href="/css/RegisterStyle.css" />
</head>
<body>
    <section class="container">
        <header>Registration Form</header>
        <form asp-action="Register" class="form">
            <div class="input-box">
                <label>Full Name</label>
                <input asp-for="UserName" type="text" placeholder="Enter full name" required />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="input-box">
                <label>Email Address</label>
                <input asp-for="Email" type="email" placeholder="Enter email address" required />
                <span asp-validation-for="Email" class="text-danger"></span>
                <label>Password</label>
                <input asp-for="Password" type="password" placeholder="Enter password" required />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="column">
                <div class="input-box">
                    <label>Phone Number</label>
                    <input asp-for="PhoneNumber" type="number" placeholder="Enter phone number" required />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <div class="column">
                    <div class="input-box">
                        <label>Second Phone Number</label>
                        <input asp-for="PhoneNumber2" type="number" placeholder="Enter your 2nd phone number(Optional)"/>
                        <span asp-validation-for="PhoneNumber2" class="text-danger"></span>
                    </div>
                @* <div class="input-box">
                    <label>Birth Date</label>
                    <input asp-for="date" type="date" placeholder="Enter birth date" required />
                        <span asp-validation-for="Password" class="text-danger"></span>
                </div> *@
                </div>
            </div>
            <div class="gender-box">
                <h3>Gender</h3>
                <div class="gender-option">
                    <div class="gender">
                        <input asp-for="Gender" type="radio" id="check-male" name="gender" value="Male" checked />
                            <span asp-validation-for="Gender" class="text-danger"></span>
                        <label for="check-male">male</label>
                    </div>
                    <div class="gender">
                        <input asp-for="Gender" type="radio" id="check-female" name="gender" value="Female"/>
                            <span asp-validation-for="Gender" class="text-danger"></span>
                        <label for="check-female">Female</label>
                    </div>
                    <div class="gender">
                        <input type="radio" id="check-other" name="gender" value="Others"/>
                            <span asp-validation-for="Gender" class="text-danger"></span>
                        <label for="check-other">prefer not to say</label>
                    </div>
                </div>
            </div>
            <div class="input-box address">
                <label>Address</label>
                <input asp-for="Addess" type="text" placeholder="Enter street address" required />
                    <span asp-validation-for="Addess" class="text-danger"></span>
            </div>
            <button type="submit">Submit</button>
        </form>
    </section>
</body>
</html>
@if (ViewData["ShowEmailConfirmed"] != null && (bool)ViewData["ShowEmailConfirmed"])
{
    <div class="modal fade" id="emailConfirmedModal" tabindex="-1" aria-labelledby="emailConfirmedModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="emailConfirmedModalLabel">Email Confirmation</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Your email has been confirmed successfully. You can now log in.
                </div>
                <div class="modal-footer d-flex justify-content-center">
                    <a href="/Account/Login" class="btn btn-success">Login Now</a>
                </div>

                <div class="modal-footer d-flex justify-content-center">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
}