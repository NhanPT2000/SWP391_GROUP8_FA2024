@{
    Layout = null;
}
<div id="eventModal" class="modal" style="display: none;">
    <div class="modal-content">
        <span class="close">&times;</span>
        <h2 id="modalEventTitle">Add Event</h2>
        <form id="eventForm" class="user-form">
            <div class="form-group">
                <label for="eventName">Name:</label>
                <input type="text" id="eventName" name="eventName" required>
            </div>
            <div class="form-group">
                <label for="eventDesc">Description:</label>
                <input type="text" id="eventDesc" name="eventDesc" required>
            </div>
            <div class="form-group">
                <label for="eventImage">Image Upload</label>
                <input type="file" id="eventImage" accept="image/*" required>
                <img id="eventImagePreview" src="" alt="Image Preview" style="display:none; margin-top: 10px; max-width: 100%; height: auto;">
            </div>

            <div class="form-group">
                <label for="eventDate">Created Date:</label>
                <input type="date" id="eventDate" name="eventDate" required>
            </div>
            <div class="form-group">
                <button type="submit" id="saveEventBtn">Save</button>
            </div>
        </form>
    </div>
</div>
