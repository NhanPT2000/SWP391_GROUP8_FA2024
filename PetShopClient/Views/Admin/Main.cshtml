    <script>
        const productLink = document.querySelector('.product-link');
        const sideBar = document.querySelector('.side-bar');
        const mainContent = document.querySelector('.main-content');
        const header = document.querySelector('.header');
        const menuToggle = document.querySelector('.menu-toggle');
        const main1 = document.querySelector('.main1');
        const main2 = document.querySelector('.main2');
        const productListItem = document.querySelector('.product-list-item');

        const products = [
            { id: 1, name: 'Food for Dogs', desc: 'Good, Healthy and Balance', unitPrice: 150 },
            { id: 2, name: 'Food for Cats', desc: 'Good, Healthy and Balance', unitPrice: 150 },
            { id: 3, name: 'Food for All', desc: 'Good, Healthy and Balance', unitPrice: 350 },
            { id: 4, name: 'Food for Cat and Dog', desc: 'Good, Healthy and Balance', unitPrice: 450 },
            { id: 5, name: 'Food for Cat Home just Cat Home', desc: 'Good, Healthy and Balance', unitPrice: 250 },
            { id: 6, name: 'Food for Dog Home just Dog Home', desc: 'Good, Healthy and Balance', unitPrice: 250 },
        ];

        menuToggle.onclick = () => {
            sideBar.classList.toggle('active');
            header.classList.toggle('shift');
            mainContent.classList.toggle('shift');
        }

        productLink.onclick = () => {
            main1.classList.add('hidden');
            main2.classList.remove('hidden');
        }

        const displayProductItem = () => {
            products.forEach(product => {
                const productItem = document.createElement('div');
                productItem.className = 'col-lg-3 col-md-4 col-sm-6 mb-4';
                productItem.innerHTML = `
            <div class="card h-100">
                <img src="${product.image}" class="card-img-top" alt="${product.name}">
                <div class="card-body">
                    <h5 class="card-title">${product.name}</h5>
                    <p class="card-text">${product.desc}</p>
                    <p class="card-text"><strong>Price: $${product.unitPrice}</strong></p>
                    <a href="#" class="btn btn-primary">Update</a>
                    <a href="#" class="btn btn-danger">Delete</a>
                </div>
            </div>
        `;
                productListItem.appendChild(productItem);
            });
        }

        displayProductItem();


