@model DataObject.Product
@{
    Layout = null;
}
<div id="productModal" class="modal">
<div class="modal-content">
    <span class="close">&times;</span>
        <form asp-action="AddProduct" method="post" id="productForm" class="product-form" enctype="multipart/form-data">
        <div class="form-group">
            <label for="productName">Product Name</label>
                <input asp-for="ProductName" type="text" id="productName" required>
                <span asp-validation-for="ProductName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="productDesc">Description</label>
            <input asp-for="ProductDescription" type="text" id="productDesc" required>
                <span asp-validation-for="ProductDescription" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="productFrom">Category</label>
            @* <input asp-for="" type="text" id="productFrom" required> *@
                <select asp-for="CategoryId" id="productCategory" asp-items="ViewBag.CategoryName" required></select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>
            <div class="form-group">
                <label for="productFrom">Origin</label>
                <input asp-for="Origin" type="text" id="productFrom" required>
                <span asp-validation-for="Origin" class="text-danger"></span>
            </div>
        <div class="form-group">
            <label for="productWeight">Weight</label>
            <input asp-for="Weight" type="number" id="productWeight" required>
                <span asp-validation-for="Weight" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="productImage">Image Upload</label>
                <input type="file" name="productImage" id="productImage" accept="image/*" required>
            <input type="text" asp-for="Image" value="none" hidden/>
                <span asp-validation-for="Image" class="text-danger"></span>
            <img id="productImagePreview" src="" alt="Image Preview" style="display:none; margin-top: 10px; max-width: 100%; height: auto;">
        </div>


        <div class="form-group">
            <label for="productAmount">Amount</label>
                <input asp-for="UnitsInStock" type="number" id="productAmount" value="0" required>
                <span asp-validation-for="UnitsInStock" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="productPrice">Price In VND</label>
            <input asp-for="UnitPrice" type="number" id="productPrice" value="0" required>
                <span asp-validation-for="UnitPrice" class="text-danger"></span>
        </div>
        <button type="submit">Save</button>
            <button id="closeProductModalBtn">Close</button>
    </form>
</div>
</div>