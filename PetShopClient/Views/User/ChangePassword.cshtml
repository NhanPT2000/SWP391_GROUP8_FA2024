@model ChangePassword
@{
    Layout = null;
}
    <meta charset="UTF-8">
    <link rel="stylesheet" href="style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.0/dist/css/bootstrap.min.css" rel="stylesheet">
<form id="partialform" asp-action="ChangePassword" asp-controller="Home" method="post"
      data-ajax="true"
      data-ajax-url="/home/changepassword"
      data-ajax-update="#account-change-password"
      data-ajax-mode="replace">
    <div class="card-body pb-2">
        <div class="form-group">
            <label class="form-label">Current password</label>
            <input asp-for="OldPassword" type="password" class="form-control" value="">
        </div>
        <div class="form-group">
            <label class="form-label">New password</label>
            <input asp-for="NewPassword" type="password" class="form-control">
        </div>
        <div class="form-group">
            <label class="form-label">Repeat new password</label>
            <input asp-for="ConfirmPassword" type="password" class="form-control">
        </div>
            <button type="submit" class="btn btn-primary">Save changes</button>&nbsp;
        <button type="button" class="btn btn-default">Reset</button>
    </div>
</form>
<script>
    function partialLoad() {
        $("#card-body pb-2").load("/ChangePassword");
    }
    function openPopup() {
        document.getElementById('popupForm').style.display = 'block';
    }

    function closePopup() {
        document.getElementById('popupForm').style.display = 'none';
    }

    function previewImage(event) {
        const reader = new FileReader();
        reader.onload = function(){
            const output = document.getElementById('petImagePreview');
            output.src = reader.result;
            output.style.display = 'block';
        };
        reader.readAsDataURL(event.target.files[0]);
    }

    function addPet() {
        const petName = document.getElementById('petName').value;
        const petType = document.getElementById('petType').value;
        const petWeight = document.getElementById('petWeight').value;
        const petOrigin = document.getElementById('petOrigin').value;
        const petPhoto = document.getElementById('petImagePreview').src;

        if (petName && petType && petWeight && petOrigin && petPhoto) {
            const petList = document.getElementById('petList');
            const petCard = document.createElement('div');
            petCard.className = 'card transaction-card';
            petCard.innerHTML = `
                <div class="card-body">
                    <img src="${petPhoto}" alt="${petName}" class="pet-image">
                    <h5>${petName}</h5>
                    <p>Type: ${petType}</p>
                    <p>Weight: ${petWeight}</p>
                    <p>Origin: ${petOrigin}</p>
                </div>
            `;
            petList.appendChild(petCard);
            closePopup();
        } else {
            alert('Please fill in all fields and upload a photo');
        }
    }
</script>
<script src="https://code.jquery.com/jquery-1.10.2.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-ajax-unobtrusive/3.2.6/jquery.unobtrusive-ajax.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.0/dist/js/bootstrap.bundle.min.js"></script>

